<div class="modal-signin">
  <h1>Sign In</h1>

  <div class="modal-form-group">

    <a class="oauth-link oauth-twitter" href="/auth/twitter">Sign in with Twitter</a><br>

    <form  action="#" method="post">
      <label for="loginString">Username or Email</label>
      <input id="loginString" type="text" name="login_string" value="<%= user.escape('login_string') %>">

      <label for="password">Password</label>
      <input id="password" type="password" name="password">

      <button>Submit</button>
    </form>
    <div class="errors"></div>
  </div>
</div>
